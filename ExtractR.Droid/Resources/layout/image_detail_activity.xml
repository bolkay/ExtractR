
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:id="@+id/imageToolBar"
            android:theme="@style/Custom.Toolbar"
            app:popupTheme="?android:attr/actionBarPopupTheme"
            app:titleTextColor="@android:color/white"
            app:subtitleTextColor="@android:color/white"/>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="2dp"
        android:elevation="15dp"
        app:contentPadding="3dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click and hold to share this image"
                android:padding="5dp"
            android:id="@+id/holdToShare"/>
            <it.sephiroth.android.library.imagezoom.ImageViewTouch
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            android:id="@+id/myImageDetailView"
                android:transitionName="imgView"
            android:contentDescription="Saved Image from path"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>