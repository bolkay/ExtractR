<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="10dp"
        android:layout_marginHorizontal="8dp"
        app:cardElevation="18dp"
        app:cardCornerRadius="5dp"
style="@style/Widget.MaterialComponents.CardView"
        android:layout_marginVertical="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/abc_btn_check_material"
                android:id="@+id/imgView"
                android:layout_marginLeft="5dp"
                android:contentDescription="image found"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:id="@+id/imageNameTextView"
                android:text="This is just a weird example. I will be just fine."
                android:textSize="18dp"
                android:textStyle="bold"
                android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimated File Size : 50 MB"
                    android:layout_marginHorizontal="3dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="@color/itemNeutral"
                    android:id="@+id/fileSizeTextView"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Swipe left or right to remove item"
                    android:textSize="10dp"
                    android:padding="4dp"/>
        </LinearLayout>
        </LinearLayout>
            
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
