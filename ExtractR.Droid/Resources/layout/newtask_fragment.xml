
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/extractRProcessingGroup"
        android:layout_above="@id/fileChooserGroup"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="5dp"
        app:contentPadding="8dp"
        android:visibility="gone"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:id="@+id/processingBar"
                    android:max="100"
                    android:progress="5"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Processing 100 images..."
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:padding="8dp"
                    android:background="@color/colorAccent"
                    android:textColor="@android:color/white"
                    android:id="@+id/processingTextView"/>

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <!--File Chooser Group-->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="18dp"
        app:cardCornerRadius="12dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/fileChooserGroup"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:id="@+id/fileChooserParent">
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fileChooserButton"
                android:text="@string/file_chooser_btn"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="18dp"
                app:icon="@drawable/note_add_black_48dp"
                app:iconSize="24dp"
                app:cornerRadius="10dp"
                android:elevation="10dp"
                android:textAppearance="?android:attr/textAppearanceButton"
                android:layout_marginHorizontal="10dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:id="@+id/imageRecyclerView"
        android:layout_below="@id/fileChooserGroup"/>

</RelativeLayout>